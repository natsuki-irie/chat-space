.left-top-block
  %td{align: "left", valign: "bottom"}
    = current_user.name
  .li
    %a{}
      = link_to edit_user_path(current_user), class: "cog-link" do
        =fa_icon "cog"
  .li
    %a{}
      = link_to new_group_path, class: "pencil-link" do
        =fa_icon "pencil-square-o"
.side-bar
  .side-bar__text
    - @groups.each do |group|
      .side-bar__groups
        %a{}
          = link_to group_messages_path(group.id), class: "link_color" do
            .side-bar__names
              = group.name
            .side-bar__messages
              - if group.messages.blank?
                まだメッセージはありません
              - else
                = group.messages.last.text
